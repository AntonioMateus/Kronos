<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RatingBar
        android:id="@+id/ratingBar_qualidade"
        android:layout_width="@dimen/ratingBar_qualidade"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/button_avaliar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ratingBar_qualidade"
        android:layout_alignParentEnd="true"
        android:text="@string/button_avaliar"
        android:textColor="@color/button_avaliar"
        style="?android:borderlessButtonStyle"/>

</RelativeLayout>