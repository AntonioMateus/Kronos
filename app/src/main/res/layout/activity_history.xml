<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="br.com.kronos.kronos.HistoryActivity">

    <TextView
        android:id="@+id/textView_history_title"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/textView_history_title"
        android:textSize="@dimen/textView_history_title"
        android:textColor="@color/textView_history_title"/>

    <Spinner
        android:id="@+id/spinner_selectPeriod"
        android:layout_height="@dimen/history_spinner_height"
        android:layout_width="match_parent"
        android:layout_toEndOf="@id/textView_history_title"
        android:layout_toRightOf="@id/textView_history_title"
        android:layout_alignBaseline="@id/textView_history_title"
        android:entries="@array/spinner_period_options"
        android:textColor="@color/spinner_selectPeriod"
        android:layout_marginLeft="@dimen/history_spinner_margin"
        android:layout_marginStart="@dimen/history_spinner_margin"/>

    <ListView
        android:id="@+id/listView_history_activities"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_history_title"
        android:descendantFocusability="beforeDescendants" />


    <!-- depois vai virar o header
    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/pieChart_activities"
        android:layout_below="@id/textView_history_title"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
        -->
    <!-- 1 coisa de cada vez

    <TextView
        android:id="@+id/textView_history_activity_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/history_activities_title"
        android:layout_below="@id/pieChart_activities"
        android:textSize="@dimen/textView_history_activity_title"
        android:textColor="@color/textView_history_activity_title"
        />


    <Spinner
        android:id="@+id/spinner_selectFormat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/textView_history_activity_title"
        android:layout_toEndOf="@id/textView_history_activity_title"
        />

    <TextView
        android:id="@+id/textView_history_goals_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/listView_history_activities"
        android:text="@string/history_goals_title"
        android:textSize="@dimen/textView_history_goals_title"
        android:textColor="@color/textView_goals_title"
        />
    -->


</RelativeLayout>
